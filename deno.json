{
  "tasks": {
    "create": "deno run --env -A ./create.ts",
    "delete": "deno run --env -A ./delete.ts",
    "check-user-data": "cloud-init schema -c user-data.yaml --annotate",
    "download-hetzner-schema": "curl -L https://docs.hetzner.cloud/spec.json --output ./hetzner-client/schema.json",
    "gen-hetzner-client": "deno run -A --unstable npm:openapi-typescript ./hetzner-client/schema.json -o ./hetzner-client/schema.ts"
  },
  "imports": {
    "openapi-fetch": "npm:openapi-fetch@^0.10.2",
    "zx": "npm:zx@^8.1.4"
  }
}
